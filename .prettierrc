{
  "printWidth": 100,
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSameLine": false,
  "htmlWhitespaceSensitivity": "strict",
  "proseWrap": "always",
  "arrayExpressionBracketNewLine": true,
  "arrayBracketNewLine": true,
  "singleAttributePerLine": true,
  "jsxSingleQuote": true,
  "insertPragma": true,
  "endOfLine": "lf",
  "requirePragma": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "singleQuote": false,
        "jsxSingleLine": false
      }
    }
  ]
}
